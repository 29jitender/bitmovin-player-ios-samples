	project 'BasicDRMPlayback/BasicDRMPlayback.xcodeproj'
	use_frameworks!
	pod 'BitmovinPlayer', git: 'https://github.com/bitmovin/bitmovin-player-ios-sdk-cocoapod.git', tag: '2.4.0'
end

target 'BasicCasting' do  
	project 'BasicCasting/BasicCasting.xcodeproj'
	use_frameworks!
	pod 'BitmovinPlayer', git: 'https://github.com/bitmovin/bitmovin-player-ios-sdk-cocoapod.git', tag: '2.4.0'
	pod 'google-cast-sdk', '3.5.0'
end

