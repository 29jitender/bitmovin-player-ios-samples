platform :ios, '10.3'

workspace 'BitmovinPlayerSamples'

target 'BasicPlayback' do  
	project 'BasicPlayback/BasicPlayback.xcodeproj'
 	use_frameworks!
 	pod 'BitmovinPlayer', git: 'https://github.com/bitmovin/bitmovin-player-ios-sdk-cocoapod.git', tag: '2.4.0'
end

